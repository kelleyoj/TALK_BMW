extends layout
block content
        .container
            .row.mt-5
                .col-md-6.m-auto
                    .card.card-body
                        h1.text-center.mb-3
                            i.fas.fa-sign-in-alt
                            |   Login
                        if (errors != undefined)
                            each error in errors
                                .alert.alert-warning.alert-dismissible.fade.show(role='alert') #{errors.msg}
                                    button.close(type='button', data-dismiss='alert', aria-label='Close')
                                        span(aria-hidden='true') ×
                        if(success_msg != '')
                            .alert.alert-success.alert-dismissible.fade.show(role='alert') #{success_msg}
                                button.close(type='button', data-dismiss='alert', aria-label='Close')
                                    span(aria-hidden='true') ×
                        if(error_msg != '')
                            .alert.alert-danger.alert-dismissible.fade.show(role='alert') #{error_msg}
                                button.close(type='button', data-dismiss='alert', aria-label='Close')
                                    span(aria-hidden='true') ×
                        if(error != '')
                            .alert.alert-danger.alert-dismissible.fade.show(role='alert') #{error}
                                button.close(type='button', data-dismiss='alert', aria-label='Close')
                                    span(aria-hidden='true') ×
                        form(action='/user/login', method='POST')
                            .form-group
                                label(for='email') Email
                                input#email.form-control(type='email', name='email', placeholder='Enter Email')
                            .form-group
                                label(for='password') Password
                                input#password.form-control(type='password', name='password', placeholder='Enter Password')
                            button.btn.btn-primary.btn-block(type='submit') Login
                        p.lead.mt-4
                            | No Account? 
                            a(href='/user/register') Register