extends layout

block content
  .container-fluid
    .hero-img
      #carouselExampleIndicators.carousel.slide(data-ride='carousel')
        ol.carousel-indicators
          li.active(data-target='#carouselExampleIndicators', data-slide-to='0')
          li(data-target='#carouselExampleIndicators', data-slide-to='1')
          li(data-target='#carouselExampleIndicators', data-slide-to='2')
        .carousel-inner
          .carousel-item.active
            img(src="https://images.unsplash.com/photo-1534791108293-e080c7d856e7?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80", alt="").img-flud
          .carousel-item
            img(src="https://images.unsplash.com/photo-1504366130991-154787072d46?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1189&q=80", alt="").img-flud
          .carousel-item
            img(src="https://images.unsplash.com/photo-1504575797-2f83688754b8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=967&q=80", alt="").img-flud
      .header-text.text-center
        h1
          |All the 
          span#B B
          span#M m
          span#W w 
          |news you will need
    .lower-nav
      ul
        li: a(href="#") Most Recent
        li: a(href="#") Popular
        li: a(href="#") Editors Choice
        li: a(href="#") Feeling Lucky
        li: a(href="/new" style='color: red') New Post
  .card-section
    .container
      .row
        each entry in blog
          .col-sm-4
            .card
              img.card-img-top(src=`${entry.image}`, alt='...')
              .card-body
                h5.card-title #{entry.title}
                p.card-text
                  | #{entry.content.substring(0,90)} ....
                a.btn.btn-primary(href="/display/"+`${entry._id}`) Read More



  
    




