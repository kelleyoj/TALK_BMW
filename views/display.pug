                                        .row
                                            .col-sm-3#fb-logo
                                                a(href="#"): i.fab.fa-facebook-f
                                            .col-sm-6#fb-word
                                                a(href="#") Facebook
                            .row.no-gutters
                                    .col-sm-6
                                        .row
                                            .col-sm-3#insta-logo
                                                a(href="#"): i.fab.fa-instagram
                                            .col-sm-6#insta-word
