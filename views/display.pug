extends layout
block content
    .display-wrapper
        .row
            .col-lg-8
                .head-wrapper
                    .container  
                        .row
                            .col-lg-12
                                h1
                                    strong #{blog.title}
                        .row
                            .col-lg-12
                                h5
                                    | #{blog.created.toDateString()} /
                                    strong  otis kelley 
                                    
                        hr
                //- picture for each blog post
                .hero-wrapper
                    .container
                        img(src=`${blog.image}`, alt="").img-fluid
                        h5 
                            stong #{blog.subtitle}
                //- Article body
                .article-wrapper
                    .container
                        p #{blog.content}
                        a(href="/display/"+`${blog.id}` +'/edit'): button.btn.btn-outline-success(type="submit", style='margin-right: 2%;') Edit Post
                        a(href="/display/"+`${blog.id}` +'/delete'): button.btn.btn-outline-danger(type='submit', style='display: ;') Delete
                        hr
                //- comments
                .comment-wrapper
                    .container
                        form(action=`/comment/${blog.id}/new`,method="post")
                            .form-group
                                label(for='exampleFormControlTextarea1') 
                                    strong 
                                        h5 Add Comment
                                textarea#exampleFormControlTextarea1.form-control(rows='4', name='comment')
                            button.btn.btn-outline-primary(type='submit') Submit
                        .comments
                            .row
                                .col-lg-12
                                    h5 
                                        strong username 
                                        | #{blog.comment.date.toDateString()}
                                .col-lg-12
                                    p #{blog.comment.comment}
                                    button.btn.btn-outline-danger(type='submit', style='display: ;') Delete
            //- right side of the blog
            .col-lg-4
                .right-wrapper
                    .container 
                        h5 
                            strong Stay conected
                        hr
                        .container
                            .row.no-gutters
                                
                                    .col-sm-6
                                        .row
                                            .col-sm-3#twitter-logo
